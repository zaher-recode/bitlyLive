
    <link rel="stylesheet" href="/css/style.css">

<div class="card-full">
    <h1 class="card-header text-center text-warning">Log In Below:</h1>
    <form class="card" action="/sessions" method ="POST">
        <br>
    <h3 class="text-danger error"><%=@message%></h3>
        <p class="signup-text">Email: </p>
        
        <input type="email" name="email" placeholder="Enter your email">
        <br>

        <p class="signup-text">Password: </p>
        
        <input type="password" name="password" placeholder="Enter your password">
        <br>    <br>

        <input type="submit" class="btn btn-warning btn-lg" value="Log In">
    </form>
    
</div>
